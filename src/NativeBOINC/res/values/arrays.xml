<resources>

	<!-- Screen rotation mode -->
	<string-array name="prefScreenOrientationDisplay">
		<item>System default</item>
		<item>Force portrait</item>
		<item>Force landscape</item>
		<item>Automatic rotation</item>
	</string-array>
	<string-array name="prefScreenOrientationValues"> 
		                 <!-- values from android.content.pm.ActivityInfo: -->
		<item>-1</item>  <!-- SCREEN_ORIENTATION_UNSPECIFIED -->
		<item>1</item>   <!-- SCREEN_ORIENTATION_PORTRAIT    -->
		<item>0</item>   <!-- SCREEN_ORIENTATION_LANDSCAPE   -->
		<item>4</item>   <!-- SCREEN_ORIENTATION_SENSOR      -->
	</string-array>

	<!-- Automatic updates of display -->
	<string-array name="prefAutoUpdatesDisplay">
		<item>Disabled</item>
		<item>1s</item>
		<item>5s</item>
		<item>10s</item>
		<item>60s</item>
	</string-array>
	<string-array name="prefAutoUpdatesValues">
		<item>0</item>
		<item>1</item>
		<item>5</item>
		<item>10</item>
		<item>60</item>
	</string-array>

	<!-- Run modes for client (display) -->
	<string-array name="clientModeRun">
		<item>Run always</item>
		<item>Run based on preferences</item>
		<item>Suspend</item>
	</string-array>
	<!-- Network modes for client (display) -->
	<string-array name="clientModeNetwork">
		<item>Network activity always available</item>
		<item>Network activity based on preferences</item>
		<item>Network activity suspended</item>
	</string-array>
	<!-- Modes for client (values) - both run and network -->
	<string-array name="clientModeValues">
		<item>1</item>
		<item>2</item>
		<item>3</item>
	</string-array>

	<!-- States of task (all tasks) -->
	<string-array name="resultStates">
		<item>New</item>                 <!-- 0 RESULT_NEW               -->
		<item>Downloading</item>         <!-- 1 RESULT_FILES_DOWNLOADING -->
		<item>Downloaded</item>          <!-- 2 RESULT_FILES_DOWNLOADED  -->
		<item>Computation Error</item>   <!-- 3 RESULT_COMPUTE_ERROR     -->
		<item>Uploading</item>           <!-- 4 RESULT_FILES_UPLOADING   -->
		<item>Ready to report</item>     <!-- 5 RESULT_FILES_UPLOADED    -->
		<item>Aborted</item>             <!-- 6 RESULT_ABORTED           -->
	</string-array>
	<!-- States of task (active tasks only) -->
	<string-array name="activeTaskStates">
		<item>Ready to start</item>  <!-- 0 PROCESS_UNINITIALIZED (process doesn't exist yet) -->
		<item>Running</item>         <!-- 1 PROCESS_EXECUTING (process is running, as far as we know) -->
		<item>Exited</item>          <!-- 2 *PROCESS_EXITED -->
		<item>Exited</item>          <!-- 3 *PROCESS_WAS_SIGNALED     -->
		<item>Exited</item>          <!-- 4 *PROCESS_EXIT_UNKNOWN   -->
		<item>Aborted</item>         <!-- 5 PROCESS_ABORT_PENDING (process exceeded limits; send "abort" message, waiting to exit)   -->
		<item>Aborted</item>         <!-- 6 *PROCESS_ABORTED          -->
		<item>Failed to start</item> <!-- 7 *PROCESS_COULDNT_START   -->
		<item>Exiting</item>         <!-- 8 PROCESS_QUIT_PENDING (we've sent it a "quit" message, waiting to exit) -->
		<item>Waiting to run</item>  <!-- 9 PROCESS_SUSPENDED (we've sent it a "suspend" message)        -->
	</string-array>

</resources>
